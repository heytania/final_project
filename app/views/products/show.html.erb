<div class="products">
  <%= render @product %>

  <% if @cart.include?(@product) %>
    <%= button_to 'Remove From Cart', remove_from_cart_path(@product), method: :delete %>
  <% else %>
    <%= button_to 'Add to Cart', add_to_cart_path(@product), method: :post %>
  <% end %>
  <br>
  <%= link_to "Back to products", products_path %>
</div>
